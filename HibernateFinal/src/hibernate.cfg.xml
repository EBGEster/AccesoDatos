<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
    
<hibernate-configuration>
	<session-factory>
		
 		<property name="hbm2ddl.auto">create</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3309/TEST</property>
		<property name="connection.username">nombre_alumno</property>
		<property name="connection.password">familia</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
		
		<mapping resource="Profesor.hbm.xml"/>
		<mapping class="Profesor"/>
		<mapping resource="Alumno.hbm.xml"/>
		<mapping class="Alumno"/>
		<mapping resource="Modulo.hbm.xml"/>
		<mapping class="Modulo"/>
		
	</session-factory>
</hibernate-configuration>